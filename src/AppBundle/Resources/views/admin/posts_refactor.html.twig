{% extends 'AppBundle::base.html.twig' %}

{% block title %} Зміни {% endblock %}

{% block h2 %}
    <h2>Змінити пост</h2>
{% endblock %}

{% block section %}
    {% for post in posts %}
        <li><a href="{{ path('post', {'id': post.id}) }}">{{ post.title }} </a></li>
        <li><a href="{{ path('post_edit', {'id': post.id}) }}">редагувати</a></li>
        <li><a href="{{ path('post_delete', {'id': post.id}) }}">видалити</a></li>
    <hr>
    {% else %}
        <li>Немає чого змінювати!</li>
    {% endfor %}
    </table>
{% endblock section %}
