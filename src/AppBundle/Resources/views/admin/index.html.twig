{% extends 'AppBundle::base.html.twig' %}

{% block title %} Адміністрування {% endblock %}

{% block section %}
    <h2>Адміністрування</h2>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <p>Username: {{ app.user.username }}</p>
    {% endif %}
    <table border="2px">
        <tr>
            <td>Додати запис</td>
            <td><a href="{{ path('post_create') }}"> додати </a></td>
        </tr>
        <tr>
            <td>Редагувати чи видалити запис</td>
            {% if app.user and is_granted('ROLE_ADMIN') %}
            <td><a href="{{ path('posts_refactor') }}">обрати</a></td>
            {% endif %}
        </tr>
        <tr>
            <td>Переглянути всі пости автора</td>
            {% if app.user and is_granted('ROLE_ADMIN') %}
            <td><a href="{{ path('authors') }}">обрати</a></td>
            {% endif %}
        </tr>
    </table>
{% endblock section %}
