{% extends 'AppBundle::base.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/jquery.jscroll.min.js') }}"></script>
    <script>
        $('document').ready(function () {
            $('.scroll').jscroll({
                loadingHtml: '<img src="{{ asset('bundles/app/img/ajax-loader.gif') }}" alt="Loading" /> Loading...',
                padding: 20,
                nextSelector: '.next a',
                autoTrigger: true
            });
        });
    </script>
{% endblock %}

{% block section %}
    <div class="scroll">
         {{ render(controller(
        'AppBundle:Post:loadMore'
    )) }}
    </div>

{% endblock %}
