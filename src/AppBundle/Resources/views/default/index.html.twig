{% extends 'AppBundle::base.html.twig' %}

{% block h2 %}
        <h2>{{ "now"|date(null, "Europe/Kiev") }}</h2>
{% endblock %}
{% block section %}
    {% for post in posts %}
        <li><a href="{{ path('post', {'id': post.id }) }}">{{ post.title }}</a></li>
        <li><blockquote>{{ post.body }} </blockquote></li>
        <hr>
    {% else %}
        <li>Постів немає</li>
    {% endfor %}
    <form action="{{ path('post_search') }}">
    <p><b>Пошук записів:</b></p>
    <p><input type="text" title="title">
    <p><input type="submit"></p>
    </form>
{% endblock %}
